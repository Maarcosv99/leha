{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noImplicitOverride": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2020",
        "outDir": "lib",
        "strictNullChecks": true,
        "noUnusedParameters": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "node",
        ]
    },
    "include": [
        "application.ts",
        "serverless.ts",
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".vscode/**/*"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}
